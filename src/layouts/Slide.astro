---
import type { MarkdownLayoutProps } from 'astro';
import Slidecomp from '../components/Slidecomp.astro'
import Toc from '../components/Toc.astro'
import '../style.css'
import {myhref} from '../functions.js'
export interface Props {
	title: string;
}
const { frontmatter, rawContent, headings,compiledContent} = await Astro.props;
const { title } = Astro.props;
console.log(frontmatter.title)
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="column">
        <Toc mainFile={frontmatter.title}/>
        <Slidecomp nextPage={frontmatter.nextPage}>
        <slot />
        </Slidecomp>
        </div>
	</body>
</html>
<style>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(3.44rem, 3.38vw + 2.85rem, 4.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
	}
    .slide{
     width:100vw;
     height:100vh;
     }
h1{
font-size:12rem;
}
.column {
  float: left;
}

.left {
  width: 25%;
}

.right {
  width: 75%;
}


</style>

<style is:global>
	h1 {
		font-size: var(--font-size-xl);
	}

	h2 {
		font-size: var(--font-size-lg);
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
